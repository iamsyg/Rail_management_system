generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RoleEnum {
  user
  admin
}

enum StatusEnum {
  resolved
  inProgress
  pending
}

model User {
  id            String      @id @default(uuid())
  name          String
  email         String      @unique
  phoneNumber   String      @unique
  password      String
  role          RoleEnum    @default(user)
  refreshToken  String?     
  createdAt     DateTime    @default(now())
  complaints    Complaint[]

  @@map("user")
}

model Complaint {
  id                String      @id @default(uuid())
  userId            String
  trainNumber       String
  pnrNumber         String
  coachNumber       String
  seatNumber        String
  sourceStation     String
  destinationStation String
  complaint         String
  classification    String?
  sentiment         String?
  sentimentScore    Float?
  status            StatusEnum @default(pending)
  resolution        String?
  createdAt         DateTime   @default(now())

  user              User       @relation(fields: [userId], references: [id])

  @@map("complaint")
}
